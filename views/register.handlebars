<div class="container">
  <div class="row mt-5">
      <div class="col-md-1">
          <!-- spacing -->
      </div>
      <div class="col-md-5" id="logoDiv">
          <img src="assets/images/png/boojiwoo-logo-export.png" id="logoimage" class="mb-3">
      </div>
      <div class="col-md-5">
          <div id="formDiv">

              <h1 class="text-white text-center mt-0">Create your Boojiwoo!</h1>

              {{!-- All of these fields were present in Alper's example --}}
              <h2 id="message" class="text-warning text-center"></h2>
              <h3 id="create-err-msg" class="text-warning text-center"></h3>
              <h3 id="err-msg" class="text-warning text-center"></h3>

              <form id= "create-form">
                  <div class="form-group">
                      <small><label for="inputUserName" class="col-form-label text-white font-weight-bold">Username:*</label></small>
                      <input type="text" class="form-control" id="inputUserName" placeholder="Username">
                  </div>
                  <div class="form-group">
                      <small><label for="inputPassword" class="col-form-label text-white font-weight-bold">Password:*</label></small>
                      <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                  </div>
                  <div class="form-group">
                      <small><label for="inputFirst" class="col-form-label text-white font-weight-bold">First Name:</label></small>
                      <input type="text" class="form-control" id="inputFirst" placeholder="(Billy, Jane, etc)">
                  </div>
                  <div class="form-group">
                      <small><label for="inputEmail" class="col-form-label text-white font-weight-bold">Email:</label></small>
                      <input type="text" class="form-control" id="inputEmail" placeholder="email@example.com">
                      </div>
                  <button type="submit" class="btn btn-success btn-block whiteborder" id="add-user">Submit</button>
              </form>

              <p class="text-white text-center mt-3"><a href="/" class="text-white underlink">Cancel and return to homepage.</a></p>
          </div>
      </div>
      <div class="col-md-1">
          <!-- spacing -->
      </div>
  </div>
</div> <!-- close container -->